<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="singidunum.ac.rs.android.busticketreservation.MainActivity">

    <ImageView
        android:id="@+id/busImage"
        android:layout_width="@dimen/busIcon"
        android:layout_height="@dimen/busIcon"
        android:layout_alignLeft="@+id/registerButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/registerButton"
        android:layout_marginTop="@dimen/main_activity_button_margin"
        app:srcCompat="@drawable/bus" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="@dimen/registerButtonWidth"
        android:layout_height="@dimen/registerButtonHeight"

        android:layout_alignLeft="@+id/loginButton"
        android:layout_alignStart="@+id/loginButton"
        android:layout_below="@+id/busImage"
        android:layout_marginTop="@dimen/main_activity_button_margin"
        android:background="@drawable/mybutton"
        android:elevation="0dp"
        android:shadowColor="#ff020000"
        android:text="@string/register_button"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/label_text_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="@dimen/registerButtonWidth"
        android:layout_height="@dimen/registerButtonHeight"
        android:layout_below="@+id/registerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_activity_button_margin"
        android:background="@drawable/mybutton"
        android:shadowColor="#ff020000"
        android:text="@string/login_button"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/label_text_size"
        android:textStyle="bold" />

</RelativeLayout>
